<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Ticket (Admin)</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="flex justify-between items-center bg-white shadow p-4">
    <div>
      <h1 class="text-lg font-bold">BuyTickets.com</h1>
      <p class="text-gray-600">Edit Ticket (Admin)</p>
      <p class="text-gray-400 text-sm">By: Yarli Rabelo</p>
    </div>
    <a href="/users/admin-settings" class="text-blue-500 font-bold hover:underline">Settings</a>
  </header>

  <!-- Main Content -->
  <main class="flex-grow container mx-auto p-6">
    <!-- Metadata Section -->
    <div class="space-y-4 mb-6">
      <div class="flex items-center space-x-4">
        <p class="bg-gray-200 text-gray-700 px-4 py-2 rounded">Created Date: <%= ticket.createdDate %></p>
        <p class="bg-gray-200 text-gray-700 px-4 py-2 rounded">Last Modified: <%= ticket.lastModified %></p>
        <p class="bg-gray-200 text-gray-700 px-4 py-2 rounded">Status: <%= ticket.status %></p>
      </div>
    </div>

    <!-- Ticket Editor -->
    <form action="/users/admin-edit-product/<%= ticket.id %>" method="POST" class="space-y-6">
      <!-- Title and Subtitle -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="title" class="block text-gray-700 font-medium mb-2">Title</label>
          <input 
            type="text" 
            id="title" 
            name="title" 
            value="<%= ticket.title %>" 
            class="w-full border-gray-300 rounded-lg p-2" 
            required>
        </div>
        <div>
          <label for="subtitle" class="block text-gray-700 font-medium mb-2">Subtitle</label>
          <input 
            type="text" 
            id="subtitle" 
            name="subtitle" 
            value="<%= ticket.subtitle %>" 
            class="w-full border-gray-300 rounded-lg p-2">
        </div>
      </div>

      <!-- Ticket Pricing -->
      <div class="grid grid-cols-3 gap-4">
        <!-- Full-Price Ticket -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Qty and General-Price</label>
          <div class="flex space-x-2">
            <input 
              type="number" 
              name="count_general" 
              placeholder="N tickets" 
              value="<%= ticket.count_general %>" 
              class="w-1/2 border-gray-300 rounded-lg p-2" 
              required>
            <input 
              type="number" 
              name="full_price" 
              placeholder="Price" 
              value="<%= ticket.full_price %>" 
              class="w-1/2 border-gray-300 rounded-lg p-2" 
              required>
          </div>
        </div>

        <!-- Concession-Price Ticket -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Qty and VIP-Price</label>
          <div class="flex space-x-2">
            <input 
              type="number" 
              name="count_VIP" 
              placeholder="N tickets" 
              value="<%= ticket.count_VIP %>" 
              class="w-1/2 border-gray-300 rounded-lg p-2">
            <input 
              type="number" 
              name="concession_price" 
              placeholder="Price" 
              value="<%= ticket.concession_price %>" 
              class="w-1/2 border-gray-300 rounded-lg p-2">
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div>
        <button 
          type="submit" 
          class="w-full bg-green-500 text-white py-3 rounded-lg font-bold hover:bg-green-600">
          Update
        </button>
      </div>
    </form>
  </main>
</body>
</html>
