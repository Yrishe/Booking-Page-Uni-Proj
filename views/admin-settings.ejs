    <main class="flex-grow flex items-center justify-center">
        <div class="bg-white shadow-lg rounded-lg p-8 w-96 border">
            <h2 class="text-2xl font-bold text-center mb-6">Settings</h2>
            <form action="/admin-settings" method="POST" class="space-y-4">
                <!-- Username Input -->
                <div>
                    <input 
                        type="text" 
                        name="appname" 
                        placeholder="App Name" 
                        class="w-full p-3 border border-gray-300 rounded-full focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    >
                </div>
                <!-- Password Input -->
                <div>
                    <input 
                        type="text" 
                        name="authorname" 
                        placeholder="Author" 
                        class="w-full p-3 border border-gray-300 rounded-full focus:ring-2 focus:ring-blue-500 focus:outline-none"
                    >
                </div>
                <!-- Submit Button -->
                <div>
                    <button 
                        type="submit" 
                        class="w-full bg-blue-500 text-white py-3 rounded-full font-bold hover:bg-blue-600">
                        Save
                    </button>
                </div>
            </form>
