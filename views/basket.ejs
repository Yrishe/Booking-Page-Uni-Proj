<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Basket</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="flex justify-between items-center bg-white shadow p-4">
    <!-- <h1 class="text-xl font-bold">BuyTickets.com</h1> -->
    <div>
        <div class="text-lg font-bold">BuyTickets.com</div>
        <div class="text-sm">Basket</div>
        <div class="text-xs text-gray-500">By: Yarli Rabelo</div>
    </div>
    <nav class="flex space-x-4">
      <a href="/users/admin-home" class="text-gray-600">Home (Admin)</a>
      <a href="/users/admin-settings" class="text-blue-500 font-bold">Settings</a>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="flex-grow container mx-auto p-4">
    <!-- Description -->
    <!-- <div class="mb-6">
      <p class="text-gray-700">By: Yarli Rabelo</p>
    </div> -->

    <!-- bookings List -->
    <div class="space-y-4">
      <% if (bookings.length === 0) { %>
        <p>No bookings found.</p>
      <% } else { %>
        <% bookings.forEach(booking => { %>
          <div class="bg-white shadow-lg rounded-lg p-4 border">
            <h2 class="text-lg font-bold"><%= booking.name %></h2>
            <% if (booking.id) { %>
              <div class="text-xs text-gray-500">General Price: $<%= booking.generalPrice %></div>
              <div class="text-xs text-gray-500">VIP Price: $<%= booking.vipPrice %></div>
              <div class="text-xs text-gray-500"><%= booking.availability %></div>
              <a 
                href="/products/customer-checkout/<%= booking.id %>"
                class="text-blue-500 font-medium hover:underline">
                Book a place
              </a>
            <% } else { %>
              <button 
                class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Add to Cart
              </button>
            <% } %>
          </div>
        <% }); %>
      <% } %>
    </div>
  </main>
</body>
</html>