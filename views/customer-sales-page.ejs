<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visitor Home Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="flex justify-between items-center bg-white shadow p-4">
    <!-- <h1 class="text-xl font-bold">BuyTickets.com</h1> -->
    <div>
        <div class="text-lg font-bold">BuyTickets.com</div>
        <div class="text-sm">Visitor Home Page</div>
        <div class="text-xs text-gray-500">By: Yarli Rabelo</div>
    </div>
    <nav class="flex space-x-4">
      <a href="/users/admin-home" class="text-gray-600">Home (Admin)</a>
      <a href="/users/admin-settings" class="text-blue-500 font-bold">Settings</a>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="flex-grow container mx-auto p-4">
    <!-- Description -->
    <!-- <div class="mb-6">
      <p class="text-gray-700">By: Yarli Rabelo</p>
    </div> -->

    <!-- Events List -->
    <div class="space-y-4">
      <% events.forEach(event => { %>
        <div class="bg-white shadow-lg rounded-lg p-4 border">
          <h2 class="text-lg font-bold"><%= event.name %></h2>
          <% if (event.id) { %>
            <div class="text-xs text-gray-500">General Price: $<%= event.generalPrice %></div>
            <div class="text-xs text-gray-500">VIP Price: $<%= event.vipPrice %></div>
            <div class="text-xs text-gray-500"><%= event.availability %></div>
            <a 
              href="/products/customer-checkout/<%= event.id %>"
              class="text-blue-500 font-medium hover:underline">
              Book a place
            </a>
          <% } else { %>
            <button 
              class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
              Add to Cart
            </button>
          <% } %>
        </div>
      <% }); %>
    </div>
  </main>
</body>
</html>