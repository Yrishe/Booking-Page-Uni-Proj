<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventHub - Discover Amazing Events</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#6366f1',
                        'primary-dark': '#4f46e5',
                        'secondary': '#ec4899',
                        'accent': '#f59e0b',
                        'success': '#10b981',
                        'dark': '#1f2937'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation Header -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3">
                    <div class="bg-gradient-to-r from-primary to-secondary p-2 rounded-lg">
                        <span class="text-white text-xl font-bold">üé´</span>
                    </div>
                    <h1 class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                        EventHub
                    </h1>
                </div>
                <div class="hidden md:flex items-center space-x-6">
                    <a href="/events" class="text-gray-700 hover:text-primary transition-colors font-medium">Events</a>
                    <a href="/about" class="text-gray-700 hover:text-primary transition-colors font-medium">About</a>
                    <a href="/contact" class="text-gray-700 hover:text-primary transition-colors font-medium">Contact</a>
                    <% if (user) { %>
                        <a href="/products/bookings" class="text-gray-700 hover:text-primary transition-colors font-medium">My Bookings</a>
                        <div class="flex items-center space-x-3">
                            <span class="text-sm text-gray-600">Welcome, <%= user.username %></span>
                            <% if (user.role === 'admin') { %>
                                <a href="/products/admin" class="bg-accent text-white px-3 py-1 rounded-full text-sm hover:bg-yellow-600 transition-colors">Admin</a>
                            <% } %>
                            <a href="/users/logout" class="text-red-600 hover:text-red-800 transition-colors font-medium">Logout</a>
                        </div>
                    <% } else { %>
                        <a href="/users/sign-in" class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary-dark transition-colors font-medium">Sign In</a>
                    <% } %>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button class="text-gray-700 hover:text-primary">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary via-purple-600 to-secondary text-white overflow-hidden">
        <div class="absolute inset-0 bg-black opacity-20"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="text-center">
                <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
                    Discover Amazing
                    <span class="block bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">
                        Events
                    </span>
                </h1>
                <p class="text-xl md:text-2xl text-purple-100 mb-8 max-w-3xl mx-auto">
                    From concerts and conferences to workshops and festivals - find and book tickets for the events that matter to you.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <div class="relative w-full sm:w-96">
                        <input type="text" 
                               id="hero-search"
                               placeholder="Search events, artists, venues..." 
                               class="w-full px-6 py-4 rounded-full text-gray-900 text-lg focus:outline-none focus:ring-4 focus:ring-yellow-400 shadow-lg">
                        <button class="absolute right-2 top-2 bg-primary text-white p-2 rounded-full hover:bg-primary-dark transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="mt-8 flex flex-wrap justify-center gap-4">
                    <span class="bg-white bg-opacity-20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium">üéµ Concerts</span>
                    <span class="bg-white bg-opacity-20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium">üé≠ Theater</span>
                    <span class="bg-white bg-opacity-20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium">üè¢ Conferences</span>
                    <span class="bg-white bg-opacity-20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium">üé® Workshops</span>
                    <span class="bg-white bg-opacity-20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium">üé™ Festivals</span>
                </div>
            </div>
        </div>
        <!-- Decorative elements -->
        <div class="absolute top-10 left-10 text-6xl opacity-20 animate-bounce">üé™</div>
        <div class="absolute top-20 right-20 text-4xl opacity-20 animate-pulse">üéµ</div>
        <div class="absolute bottom-10 left-20 text-5xl opacity-20 animate-bounce delay-1000">üé≠</div>
        <div class="absolute bottom-20 right-10 text-3xl opacity-20 animate-pulse delay-500">üé®</div>
    </section>

    <!-- Filter Section -->
    <section class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex items-center space-x-4">
                    <span class="text-sm font-medium text-gray-700">Filter by:</span>
                    <select class="border border-gray-300 rounded-lg px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                        <option>All Categories</option>
                        <option>Concerts</option>
                        <option>Theater</option>
                        <option>Conferences</option>
                        <option>Workshops</option>
                        <option>Festivals</option>
                        <option>Sports</option>
                    </select>
                    <select class="border border-gray-300 rounded-lg px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                        <option>All Dates</option>
                        <option>Today</option>
                        <option>This Week</option>
                        <option>This Month</option>
                        <option>Next Month</option>
                    </select>
                    <select class="border border-gray-300 rounded-lg px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary">
                        <option>All Prices</option>
                        <option>Free</option>
                        <option>Under $25</option>
                        <option>$25 - $50</option>
                        <option>$50 - $100</option>
                        <option>Over $100</option>
                    </select>
                </div>
                <div class="text-sm text-gray-600">
                    <span class="font-medium text-primary"><%= tickets ? tickets.length : 0 %></span> events found
                </div>
            </div>
        </div>
    </section>

    <!-- Events Grid -->
    <main class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <% if (tickets && tickets.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% tickets.forEach(function(ticket) { %>
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                        <!-- Event Image -->
                        <div class="h-48 bg-gradient-to-br from-primary to-secondary flex items-center justify-center relative overflow-hidden">
                            <div class="text-white text-6xl z-10">
                                <% if (ticket.title.toLowerCase().includes('concert') || ticket.title.toLowerCase().includes('music')) { %>
                                    üéµ
                                <% } else if (ticket.title.toLowerCase().includes('theater') || ticket.title.toLowerCase().includes('drama')) { %>
                                    üé≠
                                <% } else if (ticket.title.toLowerCase().includes('conference') || ticket.title.toLowerCase().includes('business')) { %>
                                    üè¢
                                <% } else if (ticket.title.toLowerCase().includes('workshop') || ticket.title.toLowerCase().includes('class')) { %>
                                    üé®
                                <% } else if (ticket.title.toLowerCase().includes('festival')) { %>
                                    üé™
                                <% } else if (ticket.title.toLowerCase().includes('sport')) { %>
                                    ‚öΩ
                                <% } else { %>
                                    üé´
                                <% } %>
                            </div>
                            <div class="absolute inset-0 bg-black opacity-20"></div>
                        </div>
                        
                        <!-- Event Content -->
                        <div class="p-6">
                            <div class="mb-4">
                                <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
                                    <%= ticket.title %>
                                </h3>
                                <p class="text-gray-600 text-sm line-clamp-3">
                                    <%= ticket.subtitle %>
                                </p>
                            </div>
                            
                            <!-- Event Details -->
                            <div class="space-y-3 mb-4">
                                <div class="flex items-center text-sm text-gray-500">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-6-4h6"></path>
                                    </svg>
                                    <span><%= new Date(ticket.published_date).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                                </div>
                                
                                <!-- Availability -->
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center text-sm">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                                        </svg>
                                        <span class="text-gray-600">
                                            <% const totalAvailable = (ticket.count_general || 0) + (ticket.count_VIP || 0) %>
                                            <%= totalAvailable %> tickets left
                                        </span>
                                    </div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        <%= ticket.availability_status === 'available' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                        <%= ticket.availability_status === 'available' ? '‚úÖ Available' : '‚ùå Sold Out' %>
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Pricing -->
                            <div class="mb-6">
                                <div class="flex items-center justify-between">
                                    <div class="text-sm text-gray-600">
                                        <span>Starting from</span>
                                    </div>
                                    <div class="text-right">
                                        <span class="text-2xl font-bold text-primary">$<%= Math.min(ticket.full_price, ticket.concession_price).toFixed(2) %></span>
                                        <% if (ticket.concession_price < ticket.full_price) { %>
                                            <div class="text-xs text-gray-500">Regular: $<%= ticket.full_price.toFixed(2) %></div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="flex space-x-3">
                                <% if (ticket.availability_status === 'available' && (ticket.count_general > 0 || ticket.count_VIP > 0)) { %>
                                    <a href="/products/customer-checkout/<%= ticket.id %>" 
                                       class="flex-1 bg-gradient-to-r from-primary to-primary-dark text-white text-center py-3 px-4 rounded-lg font-semibold hover:from-primary-dark hover:to-purple-700 transition-all duration-300 transform hover:scale-105">
                                        üé´ Book Now
                                    </a>
                                <% } else { %>
                                    <button disabled 
                                            class="flex-1 bg-gray-300 text-gray-500 text-center py-3 px-4 rounded-lg font-semibold cursor-not-allowed">
                                        Sold Out
                                    </button>
                                <% } %>
                                <button class="bg-gray-100 text-gray-600 px-4 py-3 rounded-lg hover:bg-gray-200 transition-colors" 
                                        title="Add to Wishlist">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
            <!-- Load More Button -->
            <% if (tickets.length >= 9) { %>
                <div class="text-center mt-12">
                    <button class="bg-gradient-to-r from-primary to-secondary text-white px-8 py-3 rounded-lg font-semibold hover:from-primary-dark hover:to-pink-600 transition-all duration-300 transform hover:scale-105">
                        Load More Events
                    </button>
                </div>
            <% } %>
        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="text-8xl mb-6">üé≠</div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">No Events Available</h3>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    We're working hard to bring you amazing events. Check back soon or sign up for notifications!
                </p>
                <% if (!user) { %>
                    <a href="/users/sign-in" 
                       class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-secondary text-white font-semibold rounded-lg hover:from-primary-dark hover:to-pink-600 transition-all duration-300">
                        Sign In for Updates
                    </a>
                <% } %>
            </div>
        <% } %>
    </main>

    <!-- Newsletter Section -->
    <section class="bg-gradient-to-r from-dark to-gray-800 text-white py-16">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold mb-4">Never Miss an Event</h2>
            <p class="text-xl text-gray-300 mb-8">Get notified about the hottest events, exclusive presales, and special offers</p>
            <div class="max-w-md mx-auto flex">
                <input type="email" 
                       id="newsletter-email"
                       placeholder="Enter your email" 
                       class="flex-1 px-6 py-3 rounded-l-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-primary">
                <button id="newsletter-btn" class="bg-gradient-to-r from-primary to-secondary hover:from-primary-dark hover:to-pink-600 px-6 py-3 rounded-r-lg font-semibold transition-all duration-300">
                    Subscribe
                </button>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-white border-t">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="bg-gradient-to-r from-primary to-secondary p-2 rounded-lg">
                            <span class="text-white text-xl font-bold">üé´</span>
                        </div>
                        <h3 class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                            EventHub
                        </h3>
                    </div>
                    <p class="text-gray-600 mb-4 max-w-md">
                        Your premier destination for discovering and booking amazing events. From intimate concerts to grand festivals, we've got your ticket to unforgettable experiences.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-primary transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-primary transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/></svg>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-primary transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001.012.001z"/></svg>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-primary transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12.007 0C5.373 0 0 5.373 0 12.007s5.373 12.007 12.007 12.007 12.007-5.373 12.007-12.007S18.641.001 12.007.001zM8.672 18.976H5.254V8.651h3.418v10.325zM6.965 7.178c-1.097 0-1.98-.893-1.98-1.99s.883-1.99 1.98-1.99c1.097 0 1.98.893 1.98 1.99s-.883 1.99-1.98 1.99zM20.25 18.976h-3.418v-5.025c0-1.277-.026-2.919-1.777-2.919-1.777 0-2.05 1.388-2.05 2.82v5.124H9.587V8.651h3.281v1.406h.047c.456-.864 1.57-1.777 3.232-1.777 3.456 0 4.094 2.275 4.094 5.227v5.469z"/></svg>
                        </a>
                    </div>
                </div>
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Discover</h4>
                    <ul class="space-y-2">
                        <li><a href="/events" class="text-gray-600 hover:text-primary transition-colors">Browse Events</a></li>
                        <li><a href="/categories" class="text-gray-600 hover:text-primary transition-colors">Categories</a></li>
                        <li><a href="/venues" class="text-gray-600 hover:text-primary transition-colors">Venues</a></li>
                        <li><a href="/organizers" class="text-gray-600 hover:text-primary transition-colors">Organizers</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Support</h4>
                    <ul class="space-y-2">
                        <li><a href="/help" class="text-gray-600 hover:text-primary transition-colors">Help Center</a></li>
                        <li><a href="/contact" class="text-gray-600 hover:text-primary transition-colors">Contact Us</a></li>
                        <li><a href="/terms" class="text-gray-600 hover:text-primary transition-colors">Terms of Service</a></li>
                        <li><a href="/privacy" class="text-gray-600 hover:text-primary transition-colors">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-gray-200 text-center">
                <p class="text-gray-500 text-sm">&copy; 2024 EventHub. All rights reserved. Made with ‚ù§Ô∏è for event lovers.</p>
            </div>
        </div>
    </footer>

    <script>
        // Search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const heroSearch = document.getElementById('hero-search');
            const heroSearchBtn = heroSearch?.nextElementSibling;
            
            if (heroSearchBtn) {
                heroSearchBtn.addEventListener('click', function() {
                    const query = heroSearch.value.trim();
                    if (query) {
                        window.location.href = `/events?search=${encodeURIComponent(query)}`;
                    }
                });
                
                heroSearch.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        heroSearchBtn.click();
                    }
                });
            }
            
            // Newsletter subscription
            const newsletterBtn = document.getElementById('newsletter-btn');
            const newsletterEmail = document.getElementById('newsletter-email');
            
            if (newsletterBtn && newsletterEmail) {
                newsletterBtn.addEventListener('click', function() {
                    const email = newsletterEmail.value.trim();
                    if (email && email.includes('@')) {
                        // Simulate subscription
                        this.textContent = 'Subscribed!';
                        this.classList.add('bg-success');
                        newsletterEmail.value = '';
                        setTimeout(() => {
                            this.textContent = 'Subscribe';
                            this.classList.remove('bg-success');
                        }, 3000);
                    } else {
                        alert('Please enter a valid email address.');
                    }
                });
                
                newsletterEmail.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        newsletterBtn.click();
                    }
                });
            }
        });
    </script>
</body>
</html>