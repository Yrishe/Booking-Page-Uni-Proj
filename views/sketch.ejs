<body class="transition-colors">
<!-- Wrapper div for centering content
<div class="grid h-[20px] place-content-left px-4 transition-colors" id="theme-container">
  
    <!-- Slider Toggle Section -->
    <div class="relative flex w-fit items-left rounded-full">
      <!-- Light Button -->
      <button class="text-sm font-medium flex items-center gap-2 px-3 md:pl-3 md:pr-3.5 py-3 md:py-1.5 transition-colors relative z-10 light-button" onclick="toggleTheme('light')">
        <i class="text-lg md:text-sm">&#x1F31E;</i> <!-- Moon Icon -->
        <span class="relative z-10">Light</span>
      </button>
      
      <!-- Dark Button -->
      <button class="text-sm font-medium flex items-center gap-2 px-3 md:pl-3 md:pr-3.5 py-3 md:py-1.5 transition-colors relative z-10 dark-button" onclick="toggleTheme('dark')">
        <i class="text-lg md:text-sm">&#x2600;</i> <!-- Sun Icon -->
        <span class="relative z-10">Dark</span>
      </button>
      
      <!-- Slider Bar -->
      <div id="slider" class="absolute inset-0 z-0 flex justify-start">
        <span class="h-full w-1/2 rounded-full bg-gradient-to-r from-violet-600 to-indigo-600"></span>
      </div>
    </div>
  
  </div>
  
  <!-- JavaScript for theme toggle -->
  <script>
    let currentTheme = 'light';
  
    function toggleTheme(theme) {
      currentTheme = theme;
      const themeContainer = document.getElementById('theme-container');
      const lightButton = document.querySelector('.light-button');
      const darkButton = document.querySelector('.dark-button');
      const slider = document.getElementById('slider');
      
      if (currentTheme === 'light') {
        themeContainer.classList.remove('bg-slate-900');
        themeContainer.classList.add('bg-white');
        lightButton.classList.add('text-white');
        darkButton.classList.remove('text-white');
        darkButton.classList.add('text-slate-800');
        slider.style.justifyContent = 'flex-start';
      } else {
        themeContainer.classList.remove('bg-white');
        themeContainer.classList.add('bg-slate-900');
        lightButton.classList.remove('text-white');
        lightButton.classList.add('text-slate-300');
        darkButton.classList.add('text-white');
        slider.style.justifyContent = 'flex-end';
      }
    }
  </script>
  </body>
