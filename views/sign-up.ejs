<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - EventHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'event-primary': '#1e40af',
                        'event-secondary': '#3b82f6',
                        'event-accent': '#f59e0b',
                        'event-success': '#10b981',
                        'event-warning': '#f59e0b',
                        'event-error': '#ef4444'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="text-6xl text-event-primary transform rotate-12 absolute top-10 left-10">🎫</div>
        <div class="text-4xl text-event-secondary transform -rotate-12 absolute top-20 right-20">🎪</div>
        <div class="text-5xl text-event-accent transform rotate-45 absolute bottom-20 left-20">🎭</div>
        <div class="text-3xl text-event-primary transform -rotate-45 absolute bottom-10 right-10">🎨</div>
        <div class="text-4xl text-event-secondary transform rotate-12 absolute top-1/2 left-1/4">🎵</div>
        <div class="text-3xl text-event-accent transform -rotate-12 absolute top-1/3 right-1/3">🎬</div>
    </div>

    <!-- Header -->
    <header class="relative z-10 p-6">
        <div class="text-center">
            <a href="/" class="inline-flex items-center text-event-primary hover:text-event-secondary transition-colors font-medium">
                <span class="mr-2">←</span> Back to Events
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="relative z-10 flex items-center justify-center min-h-screen px-4 -mt-20">
        <div class="bg-white shadow-2xl rounded-2xl p-8 w-full max-w-md border border-gray-200">
            <!-- Logo and Title -->
            <div class="text-center mb-8">
                <div class="text-4xl mb-4">🎫</div>
                <h1 class="text-2xl font-bold text-event-primary mb-2">Join EventHub</h1>
                <p class="text-gray-600">Create your account to start booking events</p>
            </div>

            <!-- Sign Up Form -->
            <form action="/users/sign-up" method="POST" class="space-y-6">
                <!-- Full Name Field -->
                <div>
                    <label for="fullname" class="block text-sm font-medium text-gray-700 mb-2">
                        👤 Full Name
                    </label>
                    <input 
                        type="text" 
                        id="fullname" 
                        name="fullname" 
                        required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-event-primary focus:border-event-primary transition-colors"
                        placeholder="Enter your full name"
                    >
                </div>

                <!-- Username Field -->
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                        🏷️ Username
                    </label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-event-primary focus:border-event-primary transition-colors"
                        placeholder="Choose a username"
                    >
                </div>

                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                        📧 Email Address
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-event-primary focus:border-event-primary transition-colors"
                        placeholder="Enter your email address"
                    >
                </div>

                <!-- Password Field -->
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                        🔒 Password
                    </label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-event-primary focus:border-event-primary transition-colors"
                        placeholder="Create a secure password"
                    >
                </div>

                <!-- Submit Button -->
                <button 
                    type="submit" 
                    class="w-full bg-event-primary text-white py-3 px-4 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 font-medium"
                >
                    Create EventHub Account
                </button>
            </form>

            <!-- Error/Success Messages -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-lg">
                    <p class="text-green-600 text-sm text-center">✅ <%= success %></p>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg">
                    <p class="text-red-600 text-sm text-center">⚠️ <%= error %></p>
                </div>
            <% } %>

            <!-- Sign In Link -->
            <div class="mt-6 text-center">
                <p class="text-gray-600 text-sm">
                    Already have an account? 
                    <a href="/users/sign-in" class="text-event-primary hover:text-event-secondary font-medium transition-colors">
                        Sign in here
                    </a>
                </p>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="relative z-10 text-center py-6">
        <p class="text-gray-500 text-sm">&copy; 2024 EventHub. All rights reserved.</p>
    </footer>
</body>
</html>
