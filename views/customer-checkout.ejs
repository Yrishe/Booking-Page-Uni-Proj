<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="flex justify-between items-center bg-white shadow p-4">
    <a href="/home" class="bg-orange-500 text-white py-2 px-4 rounded font-bold hover:bg-orange-600">Home</a>
    <h1 class="text-xl font-bold">Attendee Event Page</h1>
  </header>

  <!-- Main Content -->
  <main class="flex-grow container mx-auto p-4">
    <!-- Event Details -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
      <h2 class="text-2xl font-bold mb-2"><%= event.title %></h2>
      <p class="text-gray-700 mb-4"><%= event.description %></p>
      <p class="text-gray-600 mb-2">Date: <%= event.date %></p>
      <p class="text-gray-600">Tickets Available: <%= event.ticketsAvailable %></p>
    </div>

    <!-- Ticket Selection -->
    <form action="/book-tickets" method="POST" class="space-y-4">
      <!-- Dropdown for Ticket Type -->
      <div>
        <label for="ticketType" class="block text-gray-700 font-medium mb-2">Ticket Type</label>
        <select 
          name="ticketType" 
          id="ticketType" 
          class="w-full border-gray-300 rounded-lg p-2">
          <% event.ticketTypes.forEach(type => { %>
            <option value="<%= type.id %>"><%= type.name %> - $<%= type.price %></option>
          <% }); %>
        </select>
      </div>

      <!-- Dropdown for Number of Tickets -->
      <div>
        <label for="ticketCount" class="block text-gray-700 font-medium mb-2">Number of Tickets</label>
        <select 
          name="ticketCount" 
          id="ticketCount" 
          class="w-full border-gray-300 rounded-lg p-2">
          <% for (let i = 1; i <= event.maxTicketsPerPerson; i++) { %>
            <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
      </div>

      <!-- User Name Input -->
      <div>
        <label for="userName" class="block text-gray-700 font-medium mb-2">Your Name</label>
        <input 
          type="text" 
          name="userName" 
          id="userName" 
          class="w-full border-gray-300 rounded-lg p-2" 
          required>
      </div>

      <!-- Submit Button -->
      <div>
        <button 
          type="submit" 
          class="w-full bg-green-500 text-white py-3 rounded-lg font-bold hover:bg-green-600">
          Book
        </button>
      </div>
    </form>
  </main>
</body>
</html>
