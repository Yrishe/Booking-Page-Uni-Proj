<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Event - <%= event.title %> | Library Booking Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'library-blue': '#1e40af',
                        'library-green': '#059669',
                        'library-gray': '#6b7280'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-xl font-bold text-library-blue">üìö Library Booking Platform</h1>
                </div>
                <nav class="flex items-center space-x-4">
                    <a href="/products/customer-sales-page-d" class="text-library-blue hover:text-blue-800">‚Üê Back to Events</a>
                    <span class="text-sm text-gray-600">Welcome, <%= user.username %></span>
                    <a href="/users/logout" class="text-sm text-red-600 hover:text-red-800">Logout</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Progress Bar -->
    <div class="bg-white border-b">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex items-center justify-center">
                <div class="flex items-center text-sm">
                    <div class="flex items-center text-library-blue">
                        <div class="w-8 h-8 bg-library-blue text-white rounded-full flex items-center justify-center">
                            1
                        </div>
                        <span class="ml-2 font-medium">Event Selection</span>
                    </div>
                    <div class="w-16 h-0.5 bg-gray-300 mx-4"></div>
                    <div class="flex items-center text-gray-400">
                        <div class="w-8 h-8 bg-gray-300 text-white rounded-full flex items-center justify-center">
                            2
                        </div>
                        <span class="ml-2">Payment</span>
                    </div>
                    <div class="w-16 h-0.5 bg-gray-300 mx-4"></div>
                    <div class="flex items-center text-gray-400">
                        <div class="w-8 h-8 bg-gray-300 text-white rounded-full flex items-center justify-center">
                            3
                        </div>
                        <span class="ml-2">Confirmation</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Event Details -->
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <!-- Event Image Placeholder -->
                <div class="h-64 bg-gradient-to-br from-library-blue to-blue-600 flex items-center justify-center">
                    <div class="text-white text-8xl">
                        <% if (event.title.toLowerCase().includes('workshop')) { %>
                            üõ†Ô∏è
                        <% } else if (event.title.toLowerCase().includes('lecture')) { %>
                            üéì
                        <% } else if (event.title.toLowerCase().includes('book')) { %>
                            üìñ
                        <% } else if (event.title.toLowerCase().includes('digital')) { %>
                            üíª
                        <% } else { %>
                            üìö
                        <% } %>
                    </div>
                </div>
                
                <div class="p-6">
                    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= event.title %></h1>
                    <p class="text-lg text-gray-600 mb-6"><%= event.subtitle %></p>
                    
                    <!-- Event Information -->
                    <div class="space-y-4">
                        <div class="flex items-center">
                            <span class="w-5 h-5 text-library-blue mr-3">üìÖ</span>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Published Date:</span>
                                <p class="text-gray-900"><%= new Date(event.published_date).toLocaleDateString() %></p>
                            </div>
                        </div>
                        
                        <div class="flex items-center">
                            <span class="w-5 h-5 text-library-blue mr-3">üé´</span>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Availability:</span>
                                <p class="text-gray-900">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        <%= (event.availability_status === 'available') ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                        <%= (event.availability_status || 'unknown').charAt(0).toUpperCase() + (event.availability_status || 'unknown').slice(1) %>
                                    </span>
                                </p>
                            </div>
                        </div>
                        
                        <!-- Ticket Availability -->
                        <div class="bg-gray-50 rounded-lg p-4">
                            <h3 class="text-lg font-semibold text-gray-900 mb-3">Ticket Availability</h3>
                            <div class="grid grid-cols-2 gap-4">
                                <% if (event.count_general > 0) { %>
                                    <div class="text-center">
                                        <div class="text-2xl font-bold text-library-blue"><%= event.count_general %></div>
                                        <div class="text-sm text-gray-600">General Tickets</div>
                                        <div class="text-lg font-semibold text-gray-900">$<%= (event.full_price || 0).toFixed(2) %></div>
                                    </div>
                                <% } %>
                                <% if (event.count_VIP > 0) { %>
                                    <div class="text-center">
                                        <div class="text-2xl font-bold text-library-green"><%= event.count_VIP %></div>
                                        <div class="text-sm text-gray-600">VIP Tickets</div>
                                        <div class="text-lg font-semibold text-gray-900">$<%= ((event.full_price || 0) * 1.5).toFixed(2) %></div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Form -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Book Your Tickets</h2>
                
                <% if (error) { %>
                    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
                        <div class="flex">
                            <div class="text-red-400">‚ö†Ô∏è</div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">Booking Error</h3>
                                <div class="mt-2 text-sm text-red-700">
                                    <%= error %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
                
                <form action="/products/customer-checkout" method="POST" class="space-y-6" id="bookingForm">
                    <input type="hidden" name="event_id" value="<%= event.id %>">
                    
                    <!-- Ticket Type Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-3">Select Ticket Type</label>
                        <div class="space-y-3">
                            <% if (event.count_general > 0) { %>
                                <label class="flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                                    <input type="radio" name="ticket_type" value="general" class="text-library-blue focus:ring-library-blue" required>
                                    <div class="ml-3 flex-1">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <div class="font-medium text-gray-900">General Admission</div>
                                                <div class="text-sm text-gray-600"><%= event.count_general %> tickets available</div>
                                            </div>
                                            <div class="text-xl font-bold text-library-blue">$<%= (event.full_price || 0).toFixed(2) %></div>
                                        </div>
                                    </div>
                                </label>
                            <% } %>
                            
                            <% if (event.count_VIP > 0) { %>
                                <label class="flex items-center p-4 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
                                    <input type="radio" name="ticket_type" value="vip" class="text-library-green focus:ring-library-green" required>
                                    <div class="ml-3 flex-1">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <div class="font-medium text-gray-900">VIP Access</div>
                                                <div class="text-sm text-gray-600"><%= event.count_VIP %> tickets available</div>
                                            </div>
                                            <div class="text-xl font-bold text-library-green">$<%= ((event.full_price || 0) * 1.5).toFixed(2) %></div>
                                        </div>
                                    </div>
                                </label>
                            <% } %>
                        </div>
                    </div>

                    <!-- Quantity Selection -->
                    <div>
                        <label for="quantity" class="block text-sm font-medium text-gray-700 mb-2">Number of Tickets</label>
                        <select name="quantity" id="quantity" 
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-library-blue focus:border-library-blue" 
                                required>
                            <option value="">Select quantity</option>
                            <% for (let i = 1; i <= Math.min(10, Math.max(event.count_general, event.count_VIP)); i++) { %>
                                <option value="<%= i %>"><%= i %> ticket<%= i > 1 ? 's' : '' %></option>
                            <% } %>
                        </select>
                    </div>

                    <!-- Order Summary -->
                    <div class="bg-gray-50 rounded-lg p-4" id="orderSummary" style="display: none;">
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Order Summary</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Event:</span>
                                <span class="font-medium"><%= event.title %></span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Ticket Type:</span>
                                <span class="font-medium" id="selectedType">-</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Quantity:</span>
                                <span class="font-medium" id="selectedQuantity">-</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Unit Price:</span>
                                <span class="font-medium" id="unitPrice">-</span>
                            </div>
                            <div class="border-t pt-2">
                                <div class="flex justify-between">
                                    <span class="text-lg font-semibold text-gray-900">Total:</span>
                                    <span class="text-lg font-bold text-library-blue" id="totalPrice">$0.00</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" 
                            class="w-full bg-library-blue text-white py-3 px-4 rounded-md font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-library-blue focus:ring-offset-2 transition-colors disabled:bg-gray-300 disabled:cursor-not-allowed"
                            id="bookButton" disabled>
                        üé´ Proceed to Payment
                    </button>
                </form>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('bookingForm');
            const ticketTypeInputs = document.querySelectorAll('input[name="ticket_type"]');
            const quantitySelect = document.getElementById('quantity');
            const orderSummary = document.getElementById('orderSummary');
            const bookButton = document.getElementById('bookButton');
            
            const prices = {
                general: parseFloat('<%= event.full_price || 0 %>'),
                vip: parseFloat('<%= ((event.full_price || 0) * 1.5).toFixed(2) %>')
            };
            
            function updateOrderSummary() {
                const selectedType = document.querySelector('input[name="ticket_type"]:checked');
                const quantity = quantitySelect.value;
                
                if (selectedType && quantity) {
                    const typeValue = selectedType.value;
                    const typeName = typeValue === 'general' ? 'General Admission' : 'VIP Access';
                    const unitPrice = prices[typeValue];
                    const total = unitPrice * parseInt(quantity);
                    
                    document.getElementById('selectedType').textContent = typeName;
                    document.getElementById('selectedQuantity').textContent = quantity;
                    document.getElementById('unitPrice').textContent = '$' + unitPrice.toFixed(2);
                    document.getElementById('totalPrice').textContent = '$' + total.toFixed(2);
                    
                    orderSummary.style.display = 'block';
                    bookButton.disabled = false;
                } else {
                    orderSummary.style.display = 'none';
                    bookButton.disabled = true;
                }
            }
            
            ticketTypeInputs.forEach(input => {
                input.addEventListener('change', updateOrderSummary);
            });
            
            quantitySelect.addEventListener('change', updateOrderSummary);
        });
    </script>
</body>
</html>
