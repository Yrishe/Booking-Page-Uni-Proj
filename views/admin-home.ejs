<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'library-primary': '#2C5530',
                        'library-secondary': '#8B4513',
                        'library-accent': '#D4AF37',
                        'library-light': '#F5F5DC'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-library-light min-h-screen">
    <!-- Header -->
    <header class="bg-library-primary text-white shadow-lg">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="text-2xl">üìö</div>
                    <div>
                        <h1 class="text-xl font-bold">Bibliotec Platform</h1>
                        <p class="text-sm text-green-200">Admin Dashboard</p>
                    </div>
                </div>
                <nav class="flex items-center space-x-6">
                    <a href="/products/customer-sales-page-d" class="hover:text-library-accent transition-colors">üìÖ View Events</a>
                    <a href="/users/list-users" class="hover:text-library-accent transition-colors">üë• Users</a>
                    <% if (user) { %>
                        <div class="flex items-center space-x-2">
                            <span class="text-sm">Welcome, <%= user.username %></span>
                            <a href="/users/logout" class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded text-sm transition-colors">Logout</a>
                        </div>
                    <% } %>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-8">
        <!-- Dashboard Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="text-3xl text-library-primary mr-4">üìñ</div>
                    <div>
                        <p class="text-sm text-gray-600">Total Events</p>
                        <p class="text-2xl font-bold text-library-primary"><%= (draft.length + published.length) %></p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="text-3xl text-green-600 mr-4">‚úÖ</div>
                    <div>
                        <p class="text-sm text-gray-600">Published</p>
                        <p class="text-2xl font-bold text-green-600"><%= published.length %></p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="text-3xl text-yellow-600 mr-4">üìù</div>
                    <div>
                        <p class="text-sm text-gray-600">Drafts</p>
                        <p class="text-2xl font-bold text-yellow-600"><%= draft.length %></p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="text-3xl text-library-accent mr-4">üé´</div>
                    <div>
                        <p class="text-sm text-gray-600">Total Bookings</p>
                        <p class="text-2xl font-bold text-library-accent">-</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add New Event Form -->
        <section class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-bold text-library-primary mb-6 flex items-center">
                <span class="mr-2">‚ûï</span> Add New Library Event
            </h2>
            <form action="/users/admin-home" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Event Title</label>
                    <input type="text" name="title" placeholder="e.g., Poetry Reading Session" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-library-primary focus:border-transparent" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Event Subtitle</label>
                    <input type="text" name="subtitle" placeholder="e.g., An evening with local poets" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-library-primary focus:border-transparent" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">General Tickets</label>
                    <input type="number" name="count_general" placeholder="50" min="0" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-library-primary focus:border-transparent" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">General Price ($)</label>
                    <input type="number" name="full_price" placeholder="15.00" step="0.01" min="0" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-library-primary focus:border-transparent" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">VIP Tickets</label>
                    <input type="number" name="count_VIP" placeholder="20" min="0" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-library-primary focus:border-transparent" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">VIP Price ($)</label>
                    <input type="number" name="concession_price" placeholder="25.00" step="0.01" min="0" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-library-primary focus:border-transparent" required>
                </div>
                <div class="md:col-span-2">
                    <button type="submit" name="action" value="add" class="bg-library-primary hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-colors flex items-center">
                        <span class="mr-2">‚ûï</span> Create Event Draft
                    </button>
                </div>
            </form>
        </section>

        <!-- Draft Events -->
        <section class="mb-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-library-primary mb-6 flex items-center">
                    <span class="mr-2">üìù</span> Draft Events
                </h2>
                <% if (draft.length === 0) { %>
                    <div class="text-center py-8 text-gray-500">
                        <div class="text-4xl mb-4">üìÑ</div>
                        <p>No draft events yet. Create your first event above!</p>
                    </div>
                <% } else { %>
                    <form id="publishForm" action="/users/admin-home" method="POST">
                        <div class="overflow-x-auto">
                            <table class="w-full text-left">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="p-3 text-sm font-medium text-gray-700">
                                            <input type="checkbox" id="selectAll" class="rounded">
                                        </th>
                                        <th class="p-3 text-sm font-medium text-gray-700">Event</th>
                                        <th class="p-3 text-sm font-medium text-gray-700">Tickets</th>
                                        <th class="p-3 text-sm font-medium text-gray-700">Created</th>
                                        <th class="p-3 text-sm font-medium text-gray-700">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% draft.forEach(ticket => { %>
                                        <tr class="border-b border-gray-100 hover:bg-gray-50">
                                            <td class="p-3">
                                                <input type="checkbox" name="selectedTickets" value="<%= ticket.id %>" class="ticket-checkbox rounded">
                                            </td>
                                            <td class="p-3">
                                                <div>
                                                    <p class="font-medium text-gray-900"><%= ticket.title %></p>
                                                    <p class="text-sm text-gray-600"><%= ticket.subtitle %></p>
                                                </div>
                                            </td>
                                            <td class="p-3">
                                                <div class="text-sm">
                                                    <p>General: <%= ticket.count_general %> ($<%= ticket.full_price %>)</p>
                                                    <p>VIP: <%= ticket.count_VIP %> ($<%= ticket.concession_price %>)</p>
                                                </div>
                                            </td>
                                            <td class="p-3 text-sm text-gray-600">
                                                <%= new Date(ticket.created).toLocaleDateString() %>
                                            </td>
                                            <td class="p-3">
                                                <div class="flex space-x-2">
                                                    <a href="/users/admin-edit-product/<%= ticket.id %>" class="bg-library-secondary hover:bg-amber-700 text-white px-3 py-1 rounded text-sm transition-colors">‚úèÔ∏è Edit</a>
                                                    <form action="/users/delete-ticket/<%= ticket.id %>" method="POST" class="inline">
                                                        <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                                                        <button type="submit" name="action" value="delete" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm transition-colors" onclick="return confirm('Are you sure you want to delete this event?')">üóëÔ∏è Delete</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <div class="mt-6 flex justify-between items-center">
                            <p class="text-sm text-gray-600">Select events to publish them to the public</p>
                            <button id="publish" name="action" value="publish" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-medium transition-colors flex items-center">
                                <span class="mr-2">üöÄ</span> Publish Selected
                            </button>
                        </div>
                    </form>
                <% } %>
            </div>
        </section>

        <!-- Published Events -->
        <section>
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-library-primary mb-6 flex items-center">
                    <span class="mr-2">üåü</span> Published Events
                </h2>
                <% if (published.length === 0) { %>
                    <div class="text-center py-8 text-gray-500">
                        <div class="text-4xl mb-4">üìÖ</div>
                        <p>No published events yet. Publish some drafts to get started!</p>
                    </div>
                <% } else { %>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left">
                            <thead>
                                <tr class="border-b border-gray-200">
                                    <th class="p-3 text-sm font-medium text-gray-700">Event</th>
                                    <th class="p-3 text-sm font-medium text-gray-700">Tickets Available</th>
                                    <th class="p-3 text-sm font-medium text-gray-700">Published</th>
                                    <th class="p-3 text-sm font-medium text-gray-700">Status</th>
                                    <th class="p-3 text-sm font-medium text-gray-700">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% published.forEach(ticket => { %>
                                    <tr class="border-b border-gray-100 hover:bg-gray-50">
                                        <td class="p-3">
                                            <div>
                                                <p class="font-medium text-gray-900"><%= ticket.title %></p>
                                                <p class="text-sm text-gray-600"><%= ticket.subtitle %></p>
                                            </div>
                                        </td>
                                        <td class="p-3">
                                            <div class="text-sm">
                                                <p class="<%= ticket.count_general > 0 ? 'text-green-600' : 'text-red-600' %>">General: <%= ticket.count_general %></p>
                                                <p class="<%= ticket.count_VIP > 0 ? 'text-green-600' : 'text-red-600' %>">VIP: <%= ticket.count_VIP %></p>
                                            </div>
                                        </td>
                                        <td class="p-3 text-sm text-gray-600">
                                            <%= new Date(ticket.published).toLocaleDateString() %>
                                        </td>
                                        <td class="p-3">
                                            <% if (ticket.count_general > 0 || ticket.count_VIP > 0) { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    üü¢ Available
                                                </span>
                                            <% } else { %>
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                    üî¥ Sold Out
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="p-3">
                                            <div class="flex space-x-2">
                                                <a href="/products/customer-checkout/<%= ticket.id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm transition-colors">üëÅÔ∏è View</a>
                                                <form action="/users/delete-ticket/<%= ticket.id %>" method="POST" class="inline">
                                                    <input type="hidden" name="ticketId" value="<%= ticket.id %>">
                                                    <button type="submit" name="action" value="delete" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm transition-colors" onclick="return confirm('Are you sure you want to delete this published event?')">üóëÔ∏è Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </section>
    </main>

    <!-- JavaScript -->
    <script>
        // Select all functionality
        document.getElementById('selectAll')?.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.ticket-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });

        // Update select all when individual checkboxes change
        document.querySelectorAll('.ticket-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const allCheckboxes = document.querySelectorAll('.ticket-checkbox');
                const checkedCheckboxes = document.querySelectorAll('.ticket-checkbox:checked');
                const selectAllCheckbox = document.getElementById('selectAll');
                
                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = allCheckboxes.length === checkedCheckboxes.length;
                    selectAllCheckbox.indeterminate = checkedCheckboxes.length > 0 && checkedCheckboxes.length < allCheckboxes.length;
                }
            });
        });
    </script>
</body>
</html>


