<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice #<%= invoice.invoice_number %> - Library Booking Platform</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @media print {
            .no-print { display: none !important; }
            body { background: white !important; }
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header (No Print) -->
    <header class="bg-white shadow-sm border-b no-print">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-xl font-bold text-blue-600">üìö Library Booking Platform</h1>
                </div>
                <nav class="flex items-center space-x-4">
                    <button onclick="window.print()" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                        üñ®Ô∏è Print Invoice
                    </button>
                    <a href="/products/bookings" class="text-blue-600 hover:text-blue-800">‚Üê Back to Bookings</a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Invoice Content -->
    <main class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <!-- Invoice Header -->
            <div class="bg-blue-600 text-white px-8 py-6">
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-3xl font-bold mb-2">üìö Library Booking Platform</h1>
                        <p class="text-blue-100">Digital Library Services</p>
                        <p class="text-blue-100">123 Library Street, Book City, BC 12345</p>
                        <p class="text-blue-100">Phone: (555) 123-4567 | Email: billing@librarybooking.com</p>
                    </div>
                    <div class="text-right">
                        <h2 class="text-2xl font-bold mb-2">INVOICE</h2>
                        <p class="text-blue-100">Invoice #<%= invoice.invoice_number %></p>
                    </div>
                </div>
            </div>

            <!-- Invoice Details -->
            <div class="p-8">
                <!-- Invoice Info and Customer Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                    <!-- Invoice Information -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Invoice Information</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Invoice Number:</span>
                                <span class="font-mono font-medium"><%= invoice.invoice_number %></span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Issue Date:</span>
                                <span><%= new Date(invoice.issue_date).toLocaleDateString() %></span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Due Date:</span>
                                <span><%= new Date(invoice.due_date).toLocaleDateString() %></span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Status:</span>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                    <%= invoice.invoice_status === 'paid' ? 'bg-green-100 text-green-800' : 
                                        invoice.invoice_status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                                        'bg-red-100 text-red-800' %>">
                                    <%= invoice.invoice_status.charAt(0).toUpperCase() + invoice.invoice_status.slice(1) %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Customer Information -->
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Bill To</h3>
                        <div class="space-y-2">
                            <p class="font-medium text-gray-900"><%= booking.username %></p>
                            <% if (invoice.billing_address) { %>
                                <% const address = JSON.parse(invoice.billing_address) %>
                                <p class="text-gray-600"><%= address.street %></p>
                                <p class="text-gray-600"><%= address.city %>, <%= address.state %> <%= address.zip %></p>
                                <p class="text-gray-600"><%= address.country %></p>
                            <% } else { %>
                                <p class="text-gray-600">Address not provided</p>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Event/Service Details -->
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Event Details</h3>
                    <div class="bg-gray-50 rounded-lg p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <span class="text-sm font-medium text-gray-500">Event:</span>
                                <p class="text-gray-900 font-medium"><%= booking.title %></p>
                            </div>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Description:</span>
                                <p class="text-gray-900"><%= booking.subtitle %></p>
                            </div>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Booking Date:</span>
                                <p class="text-gray-900"><%= new Date(booking.booking_date).toLocaleDateString() %></p>
                            </div>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Booking ID:</span>
                                <p class="text-gray-900 font-mono">#<%= booking.id %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Items Table -->
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Items</h3>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900"><%= booking.title %></div>
                                        <div class="text-sm text-gray-500"><%= booking.subtitle %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 capitalize">
                                        <%= booking.ticket_type %> Ticket
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <%= booking.quantity %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        $<%= (booking.total_price / booking.quantity).toFixed(2) %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        $<%= booking.total_price.toFixed(2) %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Invoice Totals -->
                <div class="flex justify-end">
                    <div class="w-full max-w-sm">
                        <div class="bg-gray-50 rounded-lg p-6">
                            <div class="space-y-3">
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Subtotal:</span>
                                    <span class="font-medium">$<%= invoice.subtotal.toFixed(2) %></span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Tax:</span>
                                    <span class="font-medium">$<%= invoice.tax_amount.toFixed(2) %></span>
                                </div>
                                <div class="border-t pt-3">
                                    <div class="flex justify-between">
                                        <span class="text-lg font-semibold text-gray-900">Total:</span>
                                        <span class="text-lg font-bold text-blue-600">$<%= invoice.total_amount.toFixed(2) %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Information -->
                <% if (payment) { %>
                <div class="mt-8 pt-8 border-t">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Payment Information</h3>
                    <div class="bg-green-50 rounded-lg p-6">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <span class="text-sm font-medium text-gray-500">Payment Method:</span>
                                <p class="text-gray-900 capitalize"><%= payment.payment_method.replace('_', ' ') %></p>
                            </div>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Transaction ID:</span>
                                <p class="text-gray-900 font-mono"><%= payment.transaction_id %></p>
                            </div>
                            <div>
                                <span class="text-sm font-medium text-gray-500">Payment Date:</span>
                                <p class="text-gray-900"><%= new Date(payment.payment_date).toLocaleDateString() %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Notes -->
                <% if (invoice.notes) { %>
                <div class="mt-8 pt-8 border-t">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Notes</h3>
                    <p class="text-gray-600"><%= invoice.notes %></p>
                </div>
                <% } %>

                <!-- Footer -->
                <div class="mt-8 pt-8 border-t text-center text-sm text-gray-500">
                    <p>Thank you for choosing Library Booking Platform!</p>
                    <p class="mt-2">For questions about this invoice, please contact us at billing@librarybooking.com or (555) 123-4567</p>
                </div>
            </div>
        </div>

        <!-- Action Buttons (No Print) -->
        <div class="mt-8 flex justify-center space-x-4 no-print">
            <button onclick="window.print()" 
                    class="bg-blue-600 text-white px-6 py-3 rounded-md font-medium hover:bg-blue-700 transition-colors">
                üñ®Ô∏è Print Invoice
            </button>
            <a href="/products/bookings" 
               class="bg-gray-200 text-gray-800 px-6 py-3 rounded-md font-medium hover:bg-gray-300 transition-colors">
                ‚Üê Back to Bookings
            </a>
        </div>
    </main>
</body>
</html>